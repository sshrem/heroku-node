div.row
    div.col.s9
        div.ds-card-container(ng-repeat="aptRow in apartments")
            div.card.blue-grey.darken-1.ds-card-row(ng-repeat="apt in aptRow")
                div.card-image
                    cl-image(public-id="{{apt.image}}" format="png" quality="80")
                div.card-content.center-align
                    h6.hebrew.white-text {{apt.name}}
                    a.waves-effect.yellow-text.waves-teal.btn-flat(ng-click="openApartmentModal(apt.image)") {{'images' | translate}}
                    a.waves-effect.yellow-text.waves-teal.btn-flat(ui-sref="designSuppliers({projId: {{projectCode}}, aptId:{{apt.id}}})") {{'designs' | translate}}

    div.col.s3.ds-project-tabs
        ul.tabs
            li.tab.col.s1
                a.active(href="#aboutCompany") {{'company' | translate}}
            li.tab.col.s1
                a(href="#aboutProject") {{'project' | translate}}
            li.tab.col.s1
                a(href="#features") {{'features' | translate}}
        div#aboutCompany.hebrew
            cl-image(public-id="{{project.entrepreneurCachedData.logo}}"   format="png" quality="80" )
            div(ng-bind-html="project.entrepreneurCachedData.about")
        div#aboutProject.hebrew
            a(ng-click="openProjectModal()")
                cl-image(public-id="{{project.imageUrl}}"  width="300" crop="scale" format="png" quality="80" )

            div(ng-bind-html="project.about")
        div#features.hebrew
            div(ng-repeat="feat in project.features")
                i.material-icons.ds-feature-icon check
                span.ds-feature.hebrew.black-text {{feat}}


// Project Images Modal
div#projectModal.modal
    i.modal-close.material-icons.right cancel
    div.modal-content
        div.slider
            ul.slides
                li
                    cl-image(public-id="{{project.imageUrl}}" format="png" quality="80")

// Apartment Images Modal
div#AptModal.modal
    i.modal-close.material-icons.right cancel
    div.modal-content
        div.slider
            ul.slides
                li
                    cl-image(public-id="{{selectedApartment}}" format="png" quality="80")