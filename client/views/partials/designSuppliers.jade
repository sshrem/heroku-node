div.row
    form.col.s9(name="roomsItems" )
        ul.collapsible(data-collapsible="expandable" )
            li(ng-repeat="room in roomItems" track by $index)
                div.collapsible-header
                    i.material-icons {{getIcon(room.roomId)}}
                    | {{room.title | translate}}
                div.row.collapsible-body
                    ul
                        li.col.s4(ng-repeat="item in room.items")
                            input.with-gap.radio-green-light(id="radio_{{$parent.$index}}_{{$index}}"  name="group{{$parent.$index}}" type="radio" ng-model="itemFilters[$parent.$index]" value="{{room.roomId}}_{{item.offeringId}}" ng-checked="isChecked($index)" )
                            label(for="radio_{{$parent.$index}}_{{$index}}")
                            cl-image(public-id="{{item.imgCode}}"  width="50" crop="scale" format="png" quality="80" )
                            |  {{item.name}}
div.row
    div.col.s3
        button.btn.waves-effect.light-green(type="submit" name="action" ui-sref="designs(getDesignsParams())")
            | {{'visualization' | translate}}
            i.material-icons.right send
